{
  "include": ["src/**/*"],
  "exclude": ["src/**/*.snap.ts"],
  "compilerOptions": {
    /* Strict Type-Checking Options */
    "strict": true,
    /* Others */
    "lib": ["dom", "es2017"],
    "types": ["jest"],
    "outDir": "out/", // target for compiled files
    "target": "es6",
    "jsx": "react", // process JSX
    "module": "commonjs",
    "moduleResolution": "node",
    "declaration": true, // emit declarations
    "importHelpers": false, // importing helper functions from tslib
    "noEmitHelpers": false, // disable emitting inline helper functions
    "noEmitOnError": true,
    // "noUnusedLocals": true,
    "pretty": true,
    "removeComments": true,
    "sourceMap": true,
    "stripInternal": true
  }
}
